<?xml version="1.0" encoding="UTF-8"?>
<rectangle class="fundo">
    <scrollBox align="client">
        <flowLayout name="habilidadesLayout" class="tile" align="top" height="800" margins="{left=10, right=10, top=10}" autoHeight="true"
                    horzAlign="center" lineSpacing="2" maxWidth="1600">

           <rectangle cornerType="innerLine" align="client"
                      xradius="10" yradius="10"
                      height="100" width="400">
                <flowLayout height="100" width="450" maxControlsPerLine="2">
                    <flowPart width="200" height="20" align="left" margins="{left=10,top=5}">
                    <label text="Nome da Habilidade" fontStyle="bold italic" fontSize="18" fontColor="black"
                           vertTextAlign="center" horzTextAlign="center" width="200"/>
                    <horzLine align="bottom" strokeSize="1" strokeColor="black" margins="{left=15,right=15}"/>
                    </flowPart>
                    <flowPart height="20" width="20" align="right" margins="{right=10, top=5}">
                    <rectangle cornerType="innerLine" align="client"
                               xradius="3" yradius="3"
                               height="20" width="20"
                               color="black">
                    <edit height="20" width="20" horzTextAlign="center" vertTextAlign="center" fontSize="15" fontStyle="bold" type="number" transparent="true" field="cargas"/>
                    </rectangle>z
                    </flowPart>
                </flowLayout>
           </rectangle>
        </flowLayout>
    </scrollBox>
</rectangle>
