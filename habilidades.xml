<?xml version="1.0" encoding="UTF-8"?>
<rectangle class="fundo">
    <scrollBox align="client">
        <button text="Descanço Longo" height="20" width="120"
        onClick="
        sheet.cargashab1 = sheet.cargasMaxhab1
        sheet.cargashab2 = sheet.cargasMaxhab2
        sheet.cargashab3 = sheet.cargasMaxhab3
"/>
        <flowLayout name="habilidadesLayout" class="tile" align="top" height="800" margins="{left=10, right=10, top=10}"
                    autoHeight="true"
                    horzAlign="center" lineSpacing="2" maxWidth="1600">

            <habilidade name="hab1"/>
            <habilidade name="hab2"/>
            <habilidade name="hab3"/>


            <template name="habilidade">
                <rectangle cornerType="innerLine" align="client" name="$(name)"
                           xradius="10" yradius="10" margins="{left=5,right=5,top=5,bottom=5}"
                           height="60" width="400" color="#40000000" strokeColor="black" strokeSize="2">
                    <flowLayout height="60" width="400" maxControlsPerLine="3">
                        <flowPart width="280" height="25" align="left" margins="{left=10,top=5}">
                            <edit textPrompt="Nome da Habilidade" fontSize="15" transparent="true" field="nome$(name)"
                                  vertTextAlign="center" horzTextAlign="leading" width="280"/>
                            <horzLine align="bottom" strokeSize="1" strokeColor="black"/>
                        </flowPart>
                        <rectangle cornerType="innerLine" align="client"
                                   xradius="3" yradius="3" margins="{left=5,right=5}"
                                   height="20" width="55"
                                   color="#40000000" strokeColor="black" strokeSize="2">
                            <comboBox width="50" items="{'', 'C', 'C+','B', 'B+', 'A', 'A+', 'S', 'S+'}"
                                      field="rank$(name)"
                                      transparent="true"/>
                        </rectangle>
                        <flowPart height="20" width="30" align="right" margins="{right=10, top=5}">
                            <rectangle cornerType="innerLine" align="client"
                                       xradius="3" yradius="3"
                                       height="20" width="30"
                                       color="#40000000" strokeColor="black" strokeSize="2">
                                <edit height="20" width="30" horzTextAlign="center" vertTextAlign="center" fontSize="15"
                                      fontStyle="bold" fontColor="black"
                                      type="number" transparent="true" field="cargas$(name)"/>
                            </rectangle>
                        </flowPart>
                        <flowLayout height="35" width="400" align="client" margins="{top=5,left=15}">
                            <button text="usar" height="20" width="50" margins="{left=5,right=5}"/>
                            <button text="editar" height="20" width="50" margins="{left=5,right=5}"
                                    onClick="self.popup$(name):show()"/>
                            <button text="i" height="20" width="20" margins="{left=5,right=5}"/>
                        </flowLayout>
                    </flowLayout>

                </rectangle>
                <popup name="popup$(name)" height="400" width="752">
                    <flowLayout align="client" maxControlsPerLine="1" margins="{left=10,right=10,top=10,bottom=10}">
                        <rectangle cornerType="innerLine"
                                   xradius="10" yradius="10"
                                   height="200" width="732" color="silver" strokeColor="black" strokeSize="2">
                            <flowLayout height="200" width="732" padding="{left=10,right=10,top=10,bottom=10}"
                                        align="client">
                                <richEdit field="teste$(name)" height="200" width="712" backgroundColor="#40000000"
                                          defaultFontColor="white" align="client"/>
                            </flowLayout>
                        </rectangle>
                        <flowPart width="135" height="20">
                            <label text="Máximo de Cargas:" height="20" width="110" horzTextAlign="leading"
                                   vertTextAlign="center" align="left"/>
                            <edit height="20" width="25" horzTextAlign="center" vertTextAlign="center" fontSize="15"
                                  align="right"
                                  fontStyle="bold"
                                  type="number" transparent="true" field="cargasMax$(name)"/>
                            <horzLine align="bottom" strokeColor="#FFFFFF50" strokeSize="1" margins="{right=5}"/>
                        </flowPart>
                    </flowLayout>
                </popup>
            </template>
        </flowLayout>
    </scrollBox>
</rectangle>
