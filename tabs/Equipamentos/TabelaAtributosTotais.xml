<?xml version="1.0" encoding="UTF-8"?>
<group>
    <template name="CampoAtributoEquip">
        <label text="$(title)" g="col" g-width="1" />
        <edit horzTextAlign="center" g="col" g-width="1" readOnly="true" canFocus="false"
            cursor="default" g-break-line-after="$(breakLineAfter or 'false')" />
    </template>

    <template name="TabelaAtributosTotais" g="container" g-cnt-horz-align="center">

        <label text="Atributos totais recebidos de equipamentos" g="row" g-min-height="20"
            horzTextAlign="center" />
        <CampoAtributoEquip title="Constituição" />
        <CampoAtributoEquip title="Força" />
        <CampoAtributoEquip title="Destreza" />
        <CampoAtributoEquip title="Acerto" />
        <CampoAtributoEquip title="Mira" breakLineAfter="true" />
        <CampoAtributoEquip title="Carisma" />
        <CampoAtributoEquip title="Inteligência" />
        <CampoAtributoEquip title="Sabedoria" />
        <CampoAtributoEquip title="Esquiva" />
        <CampoAtributoEquip title="Bloqueio" breakLineAfter="true" />
    </template>
</group>