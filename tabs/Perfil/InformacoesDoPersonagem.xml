<?xml version="1.0" encoding="UTF-8"?>
<template name="InformacoesDoPersonagem">
    <layout g="container" g-cnt-vert-align="center" margins="{top=5, bottom=5}">

        <layout g="col" g-width="12" g-width-md="6" padding="{left=10,right=10,top=4,bottom=4}">
            <edit align="top" transparent="true" field="Nome" />
            <horzLine align="bottom" strokeColor="silver" />
            <label align="bottom" text="Nome do Personagem" fontStyle="bold" margins="{left=10}" />
        </layout>

        <layout g="col" g-width="12" g-width-md="6" g-min-height="100">
            <layout g="col" g-width="6" padding="{left=10,right=10,top=4,bottom=4}">
                <edit align="top" transparent="true" field="Classe" />
                <horzLine align="bottom" strokeColor="silver" />
                <label align="bottom" text="Classe" fontStyle="bold" margins="{left=10}" />
            </layout>
            <layout g="col" g-width="6" padding="{left=10,right=10,top=4,bottom=4}">
                <edit align="top" transparent="true" field="Raca" />
                <horzLine align="bottom" strokeColor="silver" />
                <label align="bottom" text="Raça" fontStyle="bold" margins="{left=10}" />
            </layout>
            <layout g="col" g-width="4" padding="{left=10,right=10,top=4,bottom=4}">
                <edit align="top" transparent="true" horzTextAlign="center" field="Nivel"
                    fontSize="20" fontStyle="bold" type="number" />
                <label align="bottom" text="Nivel Classe" horzTextAlign="center" fontStyle="bold"
                    wordWrap="true" />
            </layout>
            <layout g="col" g-width="4" padding="{left=10,right=10,top=4,bottom=4}">
                <edit align="top" transparent="true" horzTextAlign="center" field="NivelProfissao"
                    fontSize="20" fontStyle="bold" type="number" />
                <label align="bottom" text="Nivel Profissão" horzTextAlign="center" fontStyle="bold"
                    wordWrap="true" />
            </layout>
            <layout g="col" g-width="4" padding="{left=10,right=10,top=4,bottom=4}">
                <edit align="top" transparent="true" horzTextAlign="center" field="PtDestino"
                    fontSize="20" fontStyle="bold" type="number" />
                <label align="bottom" text="Pt. Destino" horzTextAlign="center" fontStyle="bold"
                    wordWrap="true" />
            </layout>
        </layout>
    </layout>
</template>