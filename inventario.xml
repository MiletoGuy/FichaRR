<?xml version="1.0" encoding="UTF-8"?>

<rectangle class="fundo">
    <template name="campoRiquezas">

        <flowPart height="20" width="150">
            <label text="$(text)" align="client"/>
            <horzLine align="bottom" strokeColor="#FFFFFF50" strokeSize="1" margins="{right=5,left=5}"/>
        </flowPart>
        <flowPart height="20" width="30">
            <edit align="client" field="$(field)"/>
        </flowPart>


    </template>

    <scrollBox align="client">
        <flowLayout name="riquezas" class="tile" align="top" height="500" margins="{left=10, right=10, top=10}"
                    autoHeight="true" maxControlsPerLine="2"
                    horzAlign="leading" lineSpacing="2" maxWidth="1600">
            <flowLayout autoHeight="true" minWidth="150" maxWidth="300">
                <campoRiquezas text="Bronze: " field="bronze"/>
                <campoRiquezas text="Prata: " field="prata"/>
                <campoRiquezas text="Ouro: " field="ouro"/>
                <campoRiquezas text="Platina: " field="platina"/>
            </flowLayout>

            <flowLayout autoHeight="true" minWidth="150" maxWidth="300">
                <campoRiquezas text="Gemas Raras: " field="raras"/>
                <campoRiquezas text="Gemas Preciosas: " field="preciosas"/>
                <campoRiquezas text="Gemas Desconhecidas: " field="desconhecidas"/>
            </flowLayout>
        </flowLayout>
        <richEdit align="client" backgroundColor="#40000000" field="inventario"/>
    </scrollBox>

</rectangle>